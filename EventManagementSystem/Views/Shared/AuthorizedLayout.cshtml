<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Event MAnagement System</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
    @{ 
        if (Session["userName"] == null&& Session["user"] == null)
        {

            Response.Redirect("Home/Index");
        }
        //else if(Session["userName"] == null || Session["user"] == null)
        //{
        //    if (Session["user"] == null)
        //    {
        //        Response.Redirect("~/Admin/EmpLogin");
        //    }
        //    if (Session["userName"] == null)
        //    {
        //        Response.Redirect("~/Account/Login");
        //    }
        //}

    }
    <div class="container">

        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
                <li data-target="#myCarousel" data-slide-to="3"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="~/Image/download.jpg" alt="Event Management Image" style="width:100%;height:300px">
                </div>

                <div class="item">
                    <img src="~/Image/download1.jpg" alt="Event Management Image" style="width:100%; height:300px">
                </div>
                <div class="item">
                    <img src="~/Image/wedding.jpg" alt="Event Management Image" style="width:100%;height:300px">
                </div>
                <div class="item">
                    <img src="~/Image/images.jpg" alt="Event Management Image" style="width:100%;height:300px">
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>

        </div>
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#">EMS</a>
                </div>
                <ul class="nav navbar-nav">
                    <li class="active"><a href="@Url.Action("BookingEvent", "Authorized",new { name=Session["userName"]})">BookAnEvent</a></li>
                    <li><a href="@Url.Action("VenuDetails","Admin")">Venu Details</a></li>
                    <li><a href="@Url.Action("BookingHistory","Authorized")">Booking History</a></li>
                    <li><a href="@Url.Action("UpdateInfo","Authorized")">Update Information</a></li>
                    <li><a href="@Url.Action("Feedback","Authorized",new { name=Session["userName"]})">Feedback</a></li>
                    
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="@Url.Action("","")"><span class="glyphicon glyphicon-user"></span> @Session["userName"]</a></li>
                    <li><a href="@Url.Action("Logout","Authorized")"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
               
                </ul>
            </div>
        </nav>


        <div class="container body-content">
            @RenderBody()
        </div>

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    <script src="~/scripts/jquery-3.2.1.js"></script>
    <script src="~/scripts/jquery.validate.js"></script>
    <script src="~/scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>